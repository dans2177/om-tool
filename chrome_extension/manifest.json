{
  "manifest_version": 3,
  "name": "Grandview Sender",
  "version": "1.0.0",
  "description": "Post finalized property listings from Grandview to WordPress, Crexi, and LoopNet.",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab",
    "windows",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://live-matthewsreis.pantheonsite.io/*",
    "https://*.crexi.com/*",
    "https://*.loopnet.com/*",
    "https://*.vercel.app/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Grandview Sender"
  },
  "content_scripts": [
    {
      "matches": ["https://live-matthewsreis.pantheonsite.io/wp-admin/*"],
      "js": [
        "shared/test-data.js",
        "wordpress/helpers.js",
        "wordpress/types.js",
        "wordpress/step-title.js",
        "wordpress/step-seo.js",
        "wordpress/step-type.js",
        "wordpress/step-address.js",
        "wordpress/step-financials.js",
        "wordpress/step-broker.js",
        "wordpress/step-media.js",
        "wordpress/step-publish.js",
        "wordpress/router.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.crexi.com/*"],
      "js": [
        "shared/test-data.js",
        "crexi/helpers.js",
        "crexi/types.js",
        "crexi/step-choose.js",
        "crexi/step-property-type.js",
        "crexi/step-address.js",
        "crexi/step-details.js",
        "crexi/step-financials.js",
        "crexi/step-description.js",
        "crexi/step-media.js",
        "crexi/step-om.js",
        "crexi/step-review.js",
        "crexi/router.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.crexi.com/*"],
      "js": ["crexi/page-world.js"],
      "world": "MAIN",
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.loopnet.com/*"],
      "js": ["shared/test-data.js", "loopnet.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
